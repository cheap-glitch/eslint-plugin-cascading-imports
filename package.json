{
  "name": "eslint-plugin-cascading-imports",
  "description": "Sort import declarations into a pleasing and readable cascade.",
  "version": "0.1.0",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/eslint-plugin-cascading-imports.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/eslint-plugin-cascading-imports/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/eslint-plugin-cascading-imports#readme",
  "keywords": [
    "bindings",
    "cascade",
    "cascading",
    "declarations",
    "eslint",
    "eslintplugin",
    "import",
    "imports",
    "readability",
    "sort",
    "sorting",
    "specifiers",
    "statements",
    "style"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "empty-dir dist && npm run build",
    "build:watch": "tsc --watch",
    "coverage": "npm test -- --collectCoverage",
    "coverage:upload": "coveralls < .coverage/lcov.info",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "test": "jest --runInBand",
    "test:watch": "npm test -- --watch"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@cheap-glitch/typescript",
      "plugin:eslint-plugin/all"
    ],
    "env": {
      "es6": true,
      "node": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "coverageDirectory": ".coverage"
  },
  "peerDependencies": {
    "eslint": "^8.0.0"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^2.2.0",
    "@cheap-glitch/tsconfig": "^1.0.0",
    "@types/eslint": "^8.4.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "empty-dir-cli": "^1.0.2",
    "eslint": "^8.6.0",
    "eslint-plugin-eslint-plugin": "^4.1.0",
    "jest": "^27.4.7",
    "outdent": "^0.8.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
